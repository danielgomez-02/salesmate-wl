# ============================================
# PHOTO_VERIFY Backend - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# --- OpenAI ---
OPENAI_API_KEY=sk-your-openai-api-key-here

# --- Vercel Postgres (Neon) ---
# These are auto-populated when you link a Vercel Postgres store
POSTGRES_URL=postgresql://user:password@host/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://user:password@host/database?sslmode=require

# --- Vercel KV (Upstash Redis) ---
# These are auto-populated when you link a Vercel KV store
KV_URL=redis://default:password@host:port
KV_REST_API_URL=https://your-kv.upstash.io
KV_REST_API_TOKEN=your-kv-token
KV_REST_API_READ_ONLY_TOKEN=your-kv-readonly-token

# --- Vercel Blob ---
# Auto-populated when you link a Vercel Blob store
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your-token

# --- JWT Auth ---
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ISSUER=photo-verify-backend

# --- App Config ---
NODE_ENV=development
DEFAULT_VISION_MODEL=gpt-4o-mini
MAX_IMAGE_SIZE_MB=10
